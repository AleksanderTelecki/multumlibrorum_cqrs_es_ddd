                    <col style="width: 10%;" />
                    <col style="width: 10%;" />
                    <col style="width: 10%;" />
                    <col  />
            </ColGroup>
            <HeaderContent>
                <MudTh>Title</MudTh>
                <MudTh>Author</MudTh>
                <MudTh>Price</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Title">@context.Title</MudTd>
                <MudTd DataLabel="Author">@context.Author</MudTd>
                <MudTd DataLabel="Price">@context.Price</MudTd>
                <MudTd Style="text-align:right">
                    <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="@(() => GoToBookDetails(context.Title))">Buy</MudButton>
                    <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="@(() => GoToBookDetails(context.Title))">Details</MudButton>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </MudPaper>

